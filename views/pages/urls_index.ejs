<html>

  <% include ../partials/_head.ejs %>

<body>

  <% include ../partials/_header.ejs %>

  <ul class="list-group">
    <% for (let link in links) { %>
    <li class="list-group-item"><b><%= link %></b> - <%= links[link].longURL %>
      <a href="/urls/<%=link%>"><button class="btn btn-warning">Edit</button></a>
      <form style="display: inline-block;"method="POST" action="/urls/<%= link %>/delete">
        <button class="btn btn-danger" aria-label="Left Align" name="delete" value="delete"><span class="glyphicon glyphicon-trash"></span> Delete</button>
      </form>
    </li>

    <% }; %>
  </ul>
</body>

</html>


